	text[SELECTED]		= @selected_fg_color
	text[ACTIVE]		= @selected_fg_color
	engine "pixmap"
	{
		image
		{
			function	= FLAT_BOX
			state		= SELECTED
			recolorable	= TRUE
			file		= "Images/Tree/selected.png"
			border		= {6, 6, 6, 6}
		}

		image
		{
			function	= FLAT_BOX
			state		= NORMAL
			recolorable	= TRUE
			file		= "Images/null.png"
			border		= {9, 13, 1, 1}
		}
		
		image
		{
			function	= SHADOW
			shadow		= IN
			file		= "Images/Shadows/shadow-etched-in.png"
			border		= {4, 4, 4, 4}
		}
		image
		{
			function	= SHADOW
			shadow		= ETCHED_IN
			file		= "Images/Shadows/shadow-etched-in.png"
			border		= {4, 4, 4, 4}
		}
	}
}

