style "scrolled"
{
	bg[NORMAL]	= @base_color
	bg[ACTIVE]	= @base_color
	bg[INSENSITIVE]	= @base_color
	bg[PRELIGHT]	= @base_color
	bg[SELECTED]	= @base_color

	text[NORMAL]	= @text_color
	fg[NORMAL]	= @text_color

	xthickness	= 2
	ythickness	= 2

	engine "pixmap"
	{
		image
		{
			function		= SHADOW
			shadow			= IN
			recolorable		= FALSE
			file			= "Images/Shadows/shadow-etched-in.png"
			border			= { 2, 2, 2, 2}
			stretch			= TRUE
		}

		image
		{
			function		= SHADOW
			shadow			= OUT
			recolorable		= FALSE
			file			= "Images/null.png"
			border			= { 5, 5, 5, 6}
			stretch			= TRUE
		}

		image
		{
			function		= SHADOW
			shadow			= ETCHED_IN
			recolorable		= FALSE
			file			= "Images/Shadows/shadow-etched-in.png"
			border			= { 2, 2, 2, 2}
			stretch			= TRUE
		}

		image
		{
			function		= SHADOW
			shadow			= ETCHED_OUT
			recolorable		= FALSE
			file			= "Images/null.png"
			border			= { 5, 5, 5, 6}
			stretch			= TRUE
		}
	}
}

