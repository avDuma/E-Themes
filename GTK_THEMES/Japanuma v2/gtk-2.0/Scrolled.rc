style "pcman"
{

	engine "pixmap"
	{
		image
		{
			function		= FLAT_BOX
			#shadow			= IN
			recolorable		= FALSE
			file			= "Images/Shadows/shadow-etched-in.png"
			border			= { 10, 10, 10, 10}
			stretch			= TRUE
		}

		image
		{
			function		= SHADOW
			shadow			= IN
			recolorable		= FALSE
			file			= "Images/Shadows/shadow-etched-in.png"
			border			= { 10, 10, 10, 10}
			stretch			= TRUE
		}
		
		image
		{
			function		= SHADOW
			shadow			= OUT
			recolorable		= FALSE
			file			= "Images/Shadows/shadow-etched-in.png"
			border			= { 5, 5, 5, 6}
			stretch			= TRUE
		}

		image
		{
			function		= SHADOW
			shadow			= IN
			state			= INSENSITIVE
			recolorable		= FALSE
			file			= "Images/Shadows/shadow-etched-in.png"
			border			= { 10, 10, 10, 10}
			stretch			= TRUE
		}

		image
		{
			function		= SHADOW
			shadow			= OUT
			state			= INSENSITIVE
			recolorable		= FALSE
			file			= "Images/Shadows/shadow-etched-in.png"
			border			= { 5, 5, 5, 6}
			stretch			= TRUE
		}

		image
		{
			function		= SHADOW
			shadow			= ETCHED_IN
			recolorable		= FALSE
			file			= "Images/Shadows/shadow-etched-in.png"
			border			= { 10, 10, 10, 10}
			stretch			= TRUE
		}

		image
		{
			function		= SHADOW
			shadow			= ETCHED_OUT
			recolorable		= FALSE
			file			= "Images/Shadows/shadow-etched-in.png"
			border			= { 5, 5, 5, 6}
			stretch			= TRUE
		}	
	}
}

class "GtkScrolledWindow"	style "scrolled"

