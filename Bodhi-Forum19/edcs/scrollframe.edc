            target: "sb_hbar";
        }
        program {
            name: "sb_hbar_hide";
            signal: "e,action,hide,hbar";
            source: "e";
            action: STATE_SET "default" 0.0;
            target: "sb_hbar";
        }
        program {
            name: "sb_hbar_a1_down";
            signal: "mouse,down,1";
