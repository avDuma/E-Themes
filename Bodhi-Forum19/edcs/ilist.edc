
# ifdef LIST
#  undef LIST
# endif
#define LIST(NAME,SIGNAL,STATE)					\
	program {									\
		name: NAME;								\
		signal: SIGNAL;							\
		source: "e";							\
		action: STATE_SET STATE 0.0;			\
		transition: LINEAR 0.0;				\
		target: "base";							\
	}
# ifdef TEXT
#  undef TEXT
# endif
#define TEXT(NAME,SIGNAL,STATE)					\
	program {									\
		name: NAME;								\
		signal: SIGNAL;							\
		source: "e";							\
		action: STATE_SET STATE 0.0;			\
		target: "e.text.label";					\
	}

group {
	name: "e/widgets/ilist";
	data.item: "stacking" "below";
	data.item: "selectraise" "on";
	parts {
		part { name: "disable_clip"; type: RECT;
			description { state: "default";
				color: 255 255 255 255;
			}
			description { state: "disabled";
				color: 255 255 255 125;
			}
		}
		part {
			name: "color";
			type: RECT;
			description {
				state: "default" 0.0;
			}
		}

		part {
			name: "base";
			type: RECT;
			clip_to: "color";
			description {
				state: "default" 0.0;
				color: 255 255 255 255;
				 color_class: "ilist_item_base"; 
			}
			description {
				state: "active" 0.0;
				color: 242 133 12 255;
			}
		}

		part {
			name: "e.swallow.icon";
			type: SWALLOW;
			clip_to: "disable_clip";
			description {
				state: "default" 0.0;
				align: 0.0 0.5;
				aspect: 1 1;
				aspect_preference: VERTICAL;
				rel1 { 
					offset: 8 5; 
				}
				rel2 { 
					relative: 0.0 1.0; 
					offset: 5 -6; 
				}
			}
		}

		part {
			name: "e.text.label";
			type: TEXT;
			clip_to: "disable_clip";
			scale: 1;
			effect: NONE;
			mouse_events: 0;
			description {
				state: "default" 0.0;
				rel1 { 
					to_x: "e.swallow.icon"; 
					relative: 1.0 0.0; 
					offset: 5 5; 
				}
				rel2 { 
					offset: -6 -3; 
				}
			text {										
				font: Sans;
				min: 1 1;								
				size: 11;						
				align: 0.0 0.5;					
				text_class: _text_class;				
				}
			color_class: "ilist_item";
			}
			description {
				state: "active" 0.0;
				inherit: "default" 0.0;
				color_class: "ilist_item_selected";
			}
		}

		part {
		    name: "e.swallow.end";
		    type: SWALLOW;
			clip_to: "disable_clip";
		    description {
				state: "default" 0.0;
				align: 1.0 0.5;
				aspect: 1.0 1.0;
				aspect_preference: VERTICAL;
				rel1 {
					relative: 1.0  0.0;
					offset: -5    4;
				}
				rel2 {
					relative: 1.0  1.0;
					offset: -5   -5;
				}
		    }
		}
	}
	programs {
		LIST("active_list", "e,state,selected", "active");
		LIST("unactive_list", "e,state,unselected", "default");
		TEXT("active_text", "e,state,selected", "active");
		TEXT("unactive_text", "e,state,unselected", "default");
		program {
         signal: "e,state,disabled"; source: "e";
         action: STATE_SET "disabled" 0.0;
         target: "disable_clip";
        }
      program {
         signal: "e,state,enabled"; source: "e";
         action: STATE_SET "default" 0.0;
         target: "disable_clip";
      }
	}
}
