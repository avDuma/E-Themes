				}
			color_class: "ilist_item_header";
			}
		}

		part {
			name: "event";
			type: RECT;
			description {
				state: "default" 0.0;
				color: 0 0 0 0;
				visible: 0;
			}
		}
	}
}
group {
    name: "e/widgets/ilist/toggle_end";
    parts {
		part {
            name: "icon";
            type: IMAGE;
            description {
				state: "default" 0.0;
				align: 0.0 0.5;
				min: 19 19;
				max: 19 19;
				rel1 {
					relative: 1.0  0.0;
					offset:  -30    0;
				}
				rel2 {
					relative: 1.0  1.0;
					offset: -10   -1;
				}
				image.normal: "img/radio1.png";
            }
            description {
				state: "visible" 0.0;
				inherit: "default" 0.0;
				image.normal: "img/radio2.png";
            }
		}
    }
    programs {
		program {
            signal: "e,state,checked";
            source: "e";
            action: STATE_SET "visible" 0.0;
            target: "icon";
            transition: LINEAR 0.1;
		}
		program {
            signal: "e,state,unchecked";
            source: "e";
            action: STATE_SET "default" 0.0;
            target: "icon";
            transition: LINEAR 0.1;
		}
    }
}
