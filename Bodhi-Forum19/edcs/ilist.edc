			}
		}

		part {
			name: "base";
			type: RECT;
			mouse_events: 0;
			clip_to: "color";
			description {
				state: "default" 0.0;
				color_class: "ilist_item_header_base";
				color: 255 255 255 255;
			}
		}

		part {
			name: "e.swallow.icon";
			type: SWALLOW;
			description {
				state: "default" 0.0;
				align: 0.0 0.5;
				aspect: 1 1;
				aspect_preference: VERTICAL;
				rel1 { 
					relative: 0.0 0.0; 
					offset: 2 4; 
				}
				rel2 { 
					relative: 0.0 1.0; 
					offset: 4 -3; 
				}
			}
		}

		part {
			name: "e.text.label";
			type: TEXT;
			scale: 1;
			effect: NONE;
